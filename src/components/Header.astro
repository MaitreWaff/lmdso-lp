---
import data from "../data/site.json";

import Button from "../components/Button.astro";
import ButtonAlt from "../components/ButtonAlt.astro";
const title = "✨ Transformez vos idées en systèmes automatisés sans coder"

const { buttonText, buttonAltText } = Astro.props;
const buttonTextDefault = "My Projects";
const buttonAltTextDefault = "Contact Me";
---

<div class="bg-gradient-to-b from-white dark:from-slate-600">
  <div class="py-16">
    <div class="text-center justify-self-center items-center p-2">
      <h1
        class="text-4xl font-bold tracking-tight text-gray-900 dark:text-white sm:text-6xl"
      >
        {title}
      </h1>
      <p class="my-8 text-lg text-gray-700 dark:text-white">
        {data.siteDescription}
      </p>
      <div class="mt-10 flex items-center justify-center gap-x-6">
        <Button text={ buttonText ? buttonText : buttonTextDefault } href="/projects" />
        <ButtonAlt text={ buttonAltText ? buttonAltText : buttonAltTextDefault } href="/contact" />
      </div>
    </div>
  </div>
</div>
